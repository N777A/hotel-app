<% if flash[:ok] %>
    <p class="notice"><%= flash[:ok] %></p>
<% end %>

<h2>設定</h2>
<%= link_to "アカウント", users_account_path, class: "btn btn-primary" %>
<%= link_to "プロフィール", users_profile_path, class: "btn btn-primary" %>

<div class="profile-container">
    <% if current_user.image.attached? %>
    <%= image_tag @user.image, class: "rounded-circle", width: "100px"%>
    <% else %>
    <%= image_tag 'default-avatar.png', class: "rounded-circle", width: "100px"%>
    <% end %>
    <p><%= @user.name %></p>
    <h4>自己紹介</h4>
    <p><%= @user.intro %></p>
    <div class="profile-button-container">
        <%= link_to '編集', users_profile_edit_path, class: "btn btn-outline-primary" %> 
    </div>
   
</div>




<h3>プロフィール編集</h3>
<div class="profile-edit-container">
    <%= form_with model: @user, url: users_profile_edit_path do |f| %>
    <table>
        
        <tr>
            <th><%= f.label :image, '画像' %></th>
            <td><%= f.file_field :image %></td>
        </tr>
        <tr>
            <th><%= f.label :name, '名前' %></th>
            <td><%= f.text_field :name %></td>
        </tr>
      
        <tr>
            <th><%= f.label :intro, '自己紹介' %></th>
            <td><%= f.text_field :intro %></td>
        </tr>
    </table>
    <%= f.submit '登録する', class: "btn btn-primary" %>
<% end %>
<%= link_to "キャンセル", users_profile_path  %>

</div>

<% if flash.now[:alert] %>
    <p><%= flash.now[:alert] %></p>
<% end %>


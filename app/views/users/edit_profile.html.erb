<h3>ユーザー編集</h3>

<%= form_with model: @user, url: users_profile_edit_path do |f| %>
    <%= f.label :image, '画像' %>
    <%= f.file_field :image %>

    <%= f.label :name, '名前' %>
    <%= f.text_field :name %>

    <%= f.label :intro, '自己紹介' %>
    <%= f.text_field :intro %>
    <%= f.submit '登録する' %>
<% end %>
<% if flash.now[:alert] %>
    <p><%= flash.now[:alert] %></p>
<% end %>


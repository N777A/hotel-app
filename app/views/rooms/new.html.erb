<h3>新規登録</h3>

<%= form_with model: @room do |f| %>
    <table>
        <tr>
            <th><%= f.label :name, "施設名" %></th>
            <td><%= f.text_field :name %></td>
        </tr>
        <tr>
            <th><%= f.label :intro, "施設詳細" %></th>
            <td><%= f.text_area :intro %></td>
        </tr>
        <tr>
            <th><%= f.label :fee, "料金" %></th>
            <td><%= f.number_field :fee %></td>
        </tr>
        <tr>
            <th><%= f.label :address, "住所" %></th>
            <td><%= f.text_area :address %></td>
        </tr>  
    </table>
   <%= f.hidden_field :user_id, value: @user.id %>
    <p><%= f.submit "投稿を完了する" %></p>
<% end %>


 